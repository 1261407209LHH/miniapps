#myVideo{
  width: 90%;
  margin: 0 5%;

}
.title{
  width:90%；
  height：30rpx;
  padding: 5%;
  font-size:35rpx;
  font-family: Arial, Helvetica, sans-serif;
  flex-wrap: nowrap;
}
.doWork{
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  margin: 2% 5%; 
}
#input{
  width: 65%;
  height:75rpx;
  border: 1px solid #ddd;
  border-right: none;
}
#submit{
  width: 35%;
  height:80rpx;
  font-size: 35rpx;
  margin-left: 0;
  margin-right: 0;
  padding: 0;
}
button{
  border-radius:0px !important;
}
#newComment{
  font-family: "宋体";
  font-size: 12px;
  margin: 0 5% 2% 5%;
  width: 100%;
  height: 20px;
}
.comment{
  display: flex;
  width: 90%;
  height:auto;
  margin:1.5% 5%;
  flex-wrap: nowrap;
  align-items: center;
}
.avatar{
  width: 20%;
  height:100%;
  display: flex;
  align-items:center;
  border-radius: 50%;
  padding: 2% 0;
  justify-content: center;
}
.avatar image{
  width: 100rpx;
  height:100rpx;
  align-self:center;
  border-radius: 50%;
}
.content{
  width: 80%;
  height:100%;
  display: flex;
  flex-direction: column;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 12px;
  padding: 2% 0;
}
.name{
  color: #ccc;
  font-size: 14px;
}