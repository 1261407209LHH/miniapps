.item{
  display: flex;
  flex-direction:column;
  justify-content: center;
  position:relative;
}
.newsPic{
  width: 100%;
  height: 400rpx;
}
.source{
  font-size: 12px;
  color: #999;
  padding: 5% 2%;
}
.count{
  margin-left:2%;
}
.icon{
  display: flex;
  flex-direction: column;
  position:absolute;
  width: 100%;
  height: 400rpx;
  top:0;
}
.icon text{
  color: #fff;
  padding: 3%;
  font-size:14px;
  font-family: '微软雅黑';
  align-content: cross-start;
}
.play{
  display: inline-flex;
  width: 40px;
  height: 40px;
  align-self:center;
}